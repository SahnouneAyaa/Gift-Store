

<%- include ('header.ejs') %>


  <div class="container" style="margin-top: 70px;">
    <h2 class="title">Update Product</h2>
    <div class="content">
      <form action="/update" method="post" enctype="multipart/form-data">
        <div class="user-details">
            <input type="hidden" name="oldimg" value="<%=productUpdate.img%>" >
            <input type="hidden" name="productId" value="<%=productUpdate._id%>" >
          <div class="input-box">
            <span class="details">Product Name</span>
            <input type="text" placeholder="Enter the product name" required name="name" value="<%=productUpdate.name%>">
          </div>
          <div class="input-box">
            <span class="details">Price</span>
            <input type="text" placeholder="Enter the product price" required name="price" value="<%=productUpdate.price%>">
          </div>
          <img src="/images/<%= productUpdate.img%>" alt="" width="100" height="100">
          <div class="input-box " style="margin-bottom: 0;">
            <span class="details">Product Image</span>
          </div>
        </div>
        <input type="file" name="img">

        <div class="button">
          <input type="submit" value="Confirm">
        </div>
      </form>
    </div>
  </div>



<%- include ('footer.ejs') %>

